{
  "name": "claude-code-everywhere",
  "version": "1.0.0",
  "description": "Claude Code Everywhere - Access Claude Code from anywhere via DingTalk",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
