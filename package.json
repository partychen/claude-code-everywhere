    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dingtalk-stream": "^2.1.4",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
